{
    "name": "ec-europa/toolkit",
    "description": "NextEuropa Toolkit packaged for composer",
    "license": "EUPL-1.1",
    "homepage": "https://github.com/ec-europa/toolkit",
    "support": {
        "email": "Europamanagement@ec.europa.eu",
        "source": "https://github.com/ec-europa/toolkit"
    },
    "require": {
        "ec-europa/drush-m2c": "dev-master",
        "openeuropa/task-runner": "~0.7.0"
    },
    "require-dev": {
        "openeuropa/code-review": "~0.3.0"
    },
    "extra": {
        "installer-paths": {
            "vendor/drush/drush/commands/{$name}/": ["type:drupal-drush"]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "mkdir -p vendor/ec-europa/toolkit && ln -sf $(pwd)/resources/ $(pwd)/vendor/ec-europa/toolkit/resources"
        ],
        "post-update-cmd": [
            "mkdir -p vendor/ec-europa/toolkit && ln -sf $(pwd)/resources/ $(pwd)/vendor/ec-europa/toolkit/resources"
        ]
    },
    "autoload": {
        "psr-4": {
            "Eceuropa\\Toolkit\\": "./src/"
        }
    }
}

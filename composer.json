{
    "name": "ec-europa/ssk",
    "description": "Subsite Starter Kit packaged for composer",
    "scripts": {
        "pre-install-cmd": "@ssk-install",
        "pre-update-cmd": "@ssk-update",
        "ssk-install": "PROJECT=${PROJECT} composer install --working-dir=includes/composer --ignore-platform-reqs --no-suggest --ansi",
        "ssk-update": "PROJECT=${PROJECT} composer update --working-dir=includes/composer  --ignore-platform-reqs --no-suggest --ansi"
    }
}

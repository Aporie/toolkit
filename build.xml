<?xml version="1.0" encoding="UTF-8" ?>

<project name="starterkit" default="help">

    <!-- Set starterkit paths for easy loading. -->
    <property file="${phing.dir.starterkit}/includes/phing/props/ssk.props" logoutput="false" />

    <!-- Set include path for custom tasks. -->
    <includepath classpath="${ssk.dir}/src/Phing" />

    <!-- Custom task definititons. -->
    <taskdef name="drushgal" classname="\NextEuropa\Phing\DrushGenerateAliasTask" />
    <taskdef name="drushmf" classname="\NextEuropa\Phing\DrushMakeFileTask" />
    <taskdef name="phpcsconf" classname="\NextEuropa\Phing\PhpCodeSnifferConfigurationTask" />
    <taskdef name="propval" classname="\NextEuropa\Phing\PropertiesValidateTask" />
    <taskdef name="relsym" classname="\NextEuropa\Phing\RelativeSymlinkTask" />
    <taskdef name="replacedby" classname="\NextEuropa\Phing\PhingDeprecatedTask" />
    
    <!-- Import xml files for phing. -->
    <import file="${ssk.dir.vendor}/drupal/phingdrushtask/import.xml"/>
    <import file="${ssk.dir.vendor}/drupol/phingbehattask/import.xml"/>

    <!-- Import deprecated targets first to allow projects to override them. -->
    <import file="${ssk.dir.incl.phing.build}/deprecated.xml" />

    <!-- Import helper targets and load the build properties first. -->
    <import file="${ssk.dir.incl.phing.build}/help.xml" />

    <!-- Finish import with starterkit build xml files. -->
    <import>
        <fileset dir="${ssk.dir.incl.phing.build}" >
            <patternset>
                <include name="docker.xml"/>
                <include name="drush.xml"/>
                <include name="theme.xml"/>
                <include name="project.xml"/>
                <include name="ssk.xml"/>
                <include name="test.xml"/>
            </patternset>
        </fileset>
    </import>

</project>

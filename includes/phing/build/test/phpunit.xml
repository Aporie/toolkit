<?xml version="1.0" encoding="UTF-8" ?>

<project name="PHPUnit" default="test-run-phpunit">

    <property file="${phing.dir.phpunit}/phpunit.props" logoutput="false" />

    <!-- Set up PHPUnit. -->
    <target name="test-phpunit-setup">
        <copy todir="${phpunit.dir}" overwrite="true">
            <fileset dir="${phpunit.dir}" casesensitive="yes">
                <include name="*.xml.dist"/>
            </fileset>
            <filterchain>
                <replacetokens begintoken="{{ " endtoken=" }}">
                    <token key="phpunit.base_url" value="${phpunit.base_url}" />
                    <token key="project.build.platform.dir" value="${project.build.platform.dir}" />
                    <token key="phpunit.dir" value="${phpunit.dir}" />
                </replacetokens>
            </filterchain>
            <mapper type="glob" from="*.xml.dist" to="*.xml" />
        </copy>
        <symlink link="${project.build.platform.name}" overwrite="true">
            <fileset dir="${phpunit.dir}" casesensitive="yes">
                <include name="*.yml"/>
            </fileset>
        </symlink>
        <symlink link="${project.build.platform.name}/tests" target="../tests" />
        <!-- Not needed anymore...
        <symlink link="bin/phpunit" target="../${project.build.platform.name}/vendor/bin/phpunit" overwrite="true"/>
        -->
    </target>

</project>

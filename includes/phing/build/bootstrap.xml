<?xml version="1.0" encoding="UTF-8" ?>

<project name="bootstrap" default="help">

    <property file="${phing.dir.bootstrap}/bootstrap.props" logoutput="true" />

    <!-- Finish import with starterkit build xml files. -->
    <import file="${phing.dir.bootstrap}/bootstrap/properties.xml" />
    <import file="${phing.dir.bootstrap}/bootstrap/extensions.xml" />
    <import file="${phing.dir.bootstrap}/bootstrap/directories.xml" />

    <!-- Subsequently import the project specific build file." -->
    <if>
        <available file="build.project.xml" />
        <then>
            <import file="build.project.xml" />
        </then>
    </if>

</project>
